<UserControl x:Class="japroc_company.oop3.MyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Background="{DynamicResource VsBrush.Window}"
             Foreground="{DynamicResource VsBrush.WindowText}"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="200"
             Name="MyToolWindow">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Button Content="Click Me!" Click="button1_Click" Height="100" Name="button1"/>
            <TextBox x:Name="TextBox1" Height="400" ScrollViewer.VerticalScrollBarVisibility="Visible" TextWrapping="Wrap" Text="Press button to continue."/>
        </StackPanel>
    </Grid>
</UserControl>
